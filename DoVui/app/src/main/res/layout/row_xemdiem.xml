<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="7">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ID"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_ten"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Tên bé"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Toán"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Động Vật"
                android:textColor="#000000"/>

            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Âm Nhạc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="IQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Món Ăn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_diemtoan"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Toán"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_diemdongvat"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Động Vật"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_diemamnhac"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Âm Nhạc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tv_diemiq"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="IQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tv_diemthienvan"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Món Ăn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </LinearLayout>



</LinearLayout>