<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#257ff3fc"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#047118"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:layout_height="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="27dp"
            android:text="Nhóm IQ"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:textAlignment="center"
        android:background="@drawable/duongvien_goctron_vang"
        android:layout_height="100dp">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_cauhoi"
            android:text="Câu hỏi 1 :Điền số vào chỗ trống:3 , 5 , 9 , 17 , .... "
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:textSize="25dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/duongvien_goctron_hong"
                android:text="10"
                android:id="@+id/btn1"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:background="@drawable/duongvien_goctron_hong"
                android:textSize="25dp"
                android:layout_marginBottom="20dp"
                android:text="34"
                android:id="@+id/btn2"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:textSize="25dp"
                android:background="@drawable/duongvien_goctron_hong"
                android:id="@+id/btn3"
                android:layout_marginBottom="20dp"
                android:text="33"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="25dp"
                android:id="@+id/btn4"
                android:background="@drawable/duongvien_goctron_hong"
                android:text="20"
                android:layout_height="match_parent" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btndiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="điểm"
            android:textStyle="bold"
            android:textSize="17sp"
            android:background="@drawable/hieuung"/>


    </LinearLayout>

</LinearLayout>
