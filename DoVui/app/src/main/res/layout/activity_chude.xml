<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundmenu">
    <TextView
        android:id="@+id/txtbechonchude"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#00817979">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/calculator" />

            <Button
                android:id="@+id/btntoan"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/hieuung"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:text="Toán học"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/laydongvat"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/fishtank" />
            <Button
                android:id="@+id/btndongvat"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:background="@drawable/hieuung"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:text="Động vật"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <LinearLayout
            android:id="@+id/layamnhac"
            android:layout_weight="1"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/acousticguitar" />
            <Button
                android:id="@+id/btnamnhac"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/hieuung"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:text="Âm nhạc"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layiq"
            android:layout_weight="1"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/idea" />
            <Button
                android:id="@+id/btniq"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:background="@drawable/hieuung"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:text="IQ"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/food" />
            <Button
                android:layout_marginTop="10dp"
                android:background="@drawable/hieuung"
                android:textAllCaps="false"
                android:id="@+id/btnMonAn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:text="Món Ăn"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layxemdiem"
            android:layout_weight="1"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/sunsmile" />

            <Button
                android:id="@+id/btnxemdiem"
                android:layout_marginTop="10dp"
                android:background="@drawable/hieuung"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:text="Xem điểm"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
